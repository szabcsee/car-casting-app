<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Subcategory</th>
      <th>Model</th>
      <th>Year</th>
      <th>Body</th>
      <th>Meter</th>
      <th>Fuel</th>
      <th>Condition</th>
      <th>Doors</th>
      <th>Seats</th>
      <th>Extras</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.type %></td>
        <td><%= vehicle.subCategory %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.body %></td>
        <td><%= vehicle.meter %></td>
        <td><%= vehicle.fuel %></td>
        <td><%= vehicle.condition %></td>
        <td><%= vehicle.doors %></td>
        <td><%= vehicle.seats %></td>
        <td><%= vehicle.extras %></td>
        <td><%= vehicle.user %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

