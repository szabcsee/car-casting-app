<p id="notice"><%= notice %></p>

<h1>User Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Post code</th>
      <th>City</th>
      <th>Address2</th>
      <th>Address1</th>
      <th>Telephone</th>
      <th>Invoiceable</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.post_code %></td>
        <td><%= user_profile.city %></td>
        <td><%= user_profile.address2 %></td>
        <td><%= user_profile.address1 %></td>
        <td><%= user_profile.telephone %></td>
        <td><%= user_profile.invoiceable %></td>
        <td><%= user_profile.user %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Profile', new_user_profile_path %>
